{
  "name": "jstatico",
  "version": "1.1.0",
  "description": "As simple as static web site generation gets.",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./builder": {
      "import": "./src/builder.ts",
      "types": "./src/builder.ts"
    }
  },
  "bin": {
    "jstatico": "./src/cli.ts"
  },
  "files": [
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "docs:build": "bun run src/cli.ts docs-src docs-build",
    "docs:dev": "bun run src/cli.ts docs-src docs-build && bunx serve docs-build"
  },
  "keywords": [
    "static",
    "static-site-generator",
    "ssg",
    "generator",
    "markdown",
    "nunjucks",
    "templates",
    "bun",
    "typescript"
  ],
  "author": "Yavuz Ege Ozcan",
  "license": "MIT",
  "homepage": "https://egeozcan.github.io/jstatico/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/egeozcan/jstatico.git"
  },
  "bugs": {
    "url": "https://github.com/egeozcan/jstatico/issues"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "highlight.js": "^11.11.1",
    "html-minifier-terser": "^7.2.0",
    "js-yaml": "^4.1.0",
    "marked": "^15.0.6",
    "nunjucks": "^3.2.4"
  },
  "devDependencies": {
    "@types/html-minifier-terser": "^7.0.2",
    "@types/js-yaml": "^4.0.9",
    "@types/nunjucks": "^3.2.6",
    "bun-types": "^1.1.43",
    "typescript": "^5.7.3"
  }
}
